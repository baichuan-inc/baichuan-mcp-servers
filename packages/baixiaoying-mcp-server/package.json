{
  "name": "@baichuan-ai/baixiaoying-mcp-server",
  "version": "0.1.4",
  "description": "Baixiaoying MCP Server - 百川医学大模型 MCP 服务，支持 MCP Apps，复刻百小应的视觉样式",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.js"
    },
    "./transport": {
      "types": "./dist/transport/index.d.ts",
      "import": "./dist/transport/index.js"
    }
  },
  "bin": {
    "baixiaoying-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "README_EN.md"
  ],
  "scripts": {
    "build": "npm run build:ui && tsc",
    "build:ui": "cross-env INPUT=src/ui/chat-result.html vite build",
    "dev": "concurrently \"cross-env NODE_ENV=development INPUT=src/ui/chat-result.html vite build --watch\" \"tsc --watch\"",
    "start": "node dist/index.js",
    "start:sse": "node dist/index.js --sse",
    "start:http": "node dist/index.js --http",
    "start:hybrid": "node dist/index.js --hybrid",
    "clean": "rimraf dist *.tsbuildinfo",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "deploy:local": "./scripts/deploy.sh local",
    "deploy:remote": "./scripts/deploy.sh remote",
    "deploy:build": "./scripts/deploy.sh build",
    "deploy:stop": "./scripts/deploy.sh stop",
    "deploy:logs": "./scripts/deploy.sh logs"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server",
    "mcp-apps",
    "baixiaoying",
    "baichuan",
    "medical-ai",
    "ai-assistant",
    "llm"
  ],
  "author": {
    "name": "Baichuan AI",
    "email": "andy@baichuan-inc.com",
    "url": "https://www.baichuan-ai.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baichuan-inc/baichuan-mcp-servers.git",
    "directory": "packages/baixiaoying-mcp-server"
  },
  "bugs": {
    "url": "https://github.com/baichuan-inc/baichuan-mcp-servers/issues"
  },
  "homepage": "https://github.com/baichuan-inc/baichuan-mcp-servers/tree/main/packages/baixiaoying-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "marked": "^17.0.1",
    "qrcode": "^1.5.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "rimraf": "^6.0.1",
    "vite": "^5.4.11",
    "vite-plugin-singlefile": "^2.0.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
